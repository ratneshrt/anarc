generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  userImage String? @default("")
  provider Provider 
  notes    Note[]

  @@map("users")
}

model Note {
  id          String @id @default(uuid())
  title       String
  content     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User @relation(fields: [userId], references: [id])
}

enum Provider{
  Google
  GitHub
}